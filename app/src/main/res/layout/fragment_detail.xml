<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.DetailFragment">

    <ImageView
        android:id="@+id/Image_Detail"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text_Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello_blank_fragment"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Image_Detail"
        app:layout_constraintStart_toStartOf="@+id/Image_Detail"
        app:layout_constraintTop_toBottomOf="@+id/Image_Detail" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:text="Back"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="@+id/Text_Detail"
        app:layout_constraintStart_toStartOf="@+id/Text_Detail"
        app:layout_constraintTop_toBottomOf="@+id/Text_Detail" />
</androidx.constraintlayout.widget.ConstraintLayout>